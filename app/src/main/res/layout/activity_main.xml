<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">
            <TextView android:id="@+id/edit_message" android:text="@string/hello_world" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </ScrollView>
    <Button android:id="@+id/buy_button" android:text="@string/buy_button_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buyButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulate shoppers"
        android:id="@+id/simulate_button"
        android:layout_alignTop="@+id/buy_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="simulateButton"/>/>

</RelativeLayout>
